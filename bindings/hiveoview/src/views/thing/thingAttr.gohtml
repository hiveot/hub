<!--Thing attribute list-->
<!--@param go's thing.TD object-->


<table class="h-grid-table striped thing-attr">
	<thead>
	<td>ID</td>
	<td>Name</td>
	<td>Value</td>
	</thead>

	<tbody>
  {{range $k, $v := .}}
		<tr>
			<td>{{$k}}</td>
			<td>{{$v.Title}}</td>
			<td>{{$v.InitialValue}} {{$v.DataSchema.Unit}}</td>
		</tr>
  {{end}}
	</tbody>
</table>

<style>
    .thing-attr {
        grid-template-columns:
                minmax(100px, 1fr)
                minmax(200px, 2fr)
                minmax(100px, 1fr);
    }

</style>