{
	"@context":[ "https://www.w3.org/2022/wot/td/v1.1",
		{"ht": "https://www.hiveot.net/vocab/v0.1"}
	],
	"@type": "Service",
	"id": "urn:digitwin:directory",
	"title": "DigiTwin Directory Service",
	"description": "HiveOT digital twin directory service",
	"version": {
		"instance": "0.1.0"
	},
	"created": "2024-04-21T17:00:00.000Z",
	"modified": "2024-04-21T17:00:00.000Z",
	"support": "https://www.github.com/hiveot/hub",
	"security": ["bearer"],
	"securityDefinitions": {
		"bearer": {
			"description": "HTTP protocol authentication",
			"name": "authentication",
			"alg": "es256",
			"format": "jwt",
			"scheme": "bearer",
			"in": "header"
		}
	},
	"forms": [{
		"op": "readallproperties",
		"contentType": "application/json",
		"href": "/things/{thingID}/properties"
	}],
	"properties": {
	},
	"events": {
		"thingAdded": {
			"title": "Thing Added",
			"description": "A new Thing TD was added to the directory",
			"data": {
				"title": "thingID",
				"description": "ID of the Thing that was added",
				"type": "string"
			},
			"forms": [{"href": "/sse","subprotocol": "sse"}]
		},
		"thingRemoved": {
			"title": "Thing Removed",
			"description": "A Thing TD was removed from the directory",
			"data": {
				"title": "thingID",
				"description": "ID of the Thing that was removed",
				"type": "string"
			},
			"forms": [{"href": "/sse","subprotocol": "sse"}]
		}
	},
	"actions": {
		"readThing": {
			"@type": "ht:function",
			"title": "Read TD",
			"description": "This returns a JSON encoded TD document",
			"safe": true,
			"idempotent": true,
			"input": {
				"type": "object",
				"required": ["thingID"],
				"properties": {
					"thingID": {
						"title": "Thing ID",
						"description": "ID of the Thing to read",
						"type": "string"
					}
				}
			},
			"output": {
				"title": "TDD",
				"description": "A JSON encoded Thing Description Document",
				"question": "How to link to the TD as a type?",
				"type": "string"
			},
			"forms": [{
				"href": "things/{thingID}/readThing",
				"contentType": "application/json",
				"https:methodName": "GET"
			}]
		},
		"readThings": {
			"@type": "ht:function",
			"title": "Read TDs",
			"description": "Read a batch of TD documents",
			"safe": true,
			"idempotent": true,
			"input": {
				"type": "object",
				"properties": {
					"offset": {
						"title": "Offset",
						"type": "integer",
						"minimum": 0,
						"default": 0
					},
					"limit": {
						"title": "Limit",
						"type": "integer",
						"minimum": 1,
						"default": 100
					}
				}
			},
			"output": {
				"title": "TD list",
				"description": "List of JSON encoded TD documents",
				"type": "array",
				"items": {
					"type": "string"
				}
			},
			"forms": [{
				"href": "things/{thingID}/readThing",
				"contentType": "application/json",
				"https:methodName": "GET"
			}]
		},
		"removeThing": {
			"@type": "ht:function",
			"title": "Remove Thing",
			"description": "Remove a Thing from the directory and value stores",
			"safe": false,
			"idempotent": true,
			"input": {
				"type": "object",
				"properties": {
					"thingID": {
						"title": "thingID",
						"description": "ID of the Thing to remove",
						"type": "string"
					}
				}
			},
			"forms": [{
				"href": "things/{thingID}/removeThing",
				"contentType": "application/json",
				"https:methodName": "POST"
			}]
		},
		"queryThings": {
			"@type": "ht:function",
			"title": "Query Things",
			"description": "Query things from the directory",
			"safe": false,
			"idempotent": true,
			"input": {
				"type": "object",
				"properties": {
					"query": {
						"title": "Query Things",
						"description": "Query expression (tbd)",
						"type": "string"
					},
					"offset": {
						"title": "Result offset",
						"description": "Number of results to skip",
						"type": "integer",
						"minimum": 0,
						"default": 0
					},
					"limit": {
						"title": "Max entries",
						"description": "Maximum number of entries to return",
						"type": "integer",
						"minimum": 1,
						"default": 100
					}
				}
			},
			"output": {
				"title": "TD list",
				"description": "List of JSON encoded TD documents",
				"type": "array",
				"items": {
					"type": "string"
				}
			},
			"forms": [{
				"href": "things/{thingID}/queryThings",
				"contentType": "application/json",
				"https:methodName": "GET"
			}]
		}
	},
	"links": []
}